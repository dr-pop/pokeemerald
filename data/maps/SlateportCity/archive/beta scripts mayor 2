RustboroCity_DevonCorp_1F_EventScript_MayorOffice:: @ 821127F
	lock
	faceplayer
	goto_if_set FLAG_MET_DEVON_EMPLOYEE, RustboroCity_DevonCorp_1F_EventScript_MayorOffice2
	msgbox RustboroCity_DevonCorp_1F_Text_MayorOffice1, MSGBOX_DEFAULT
	closemessage
	applymovement OBJ_EVENT_PLAYER_ID, RustboroCity_DevonCorp_1F_Movement_Player1
	waitmovement 0
	applymovement 1, RustboroCity_DevonCorp_1F_Movement_Mayor1
	waitmovement 0
	applymovement 1, RustboroCity_DevonCorp_1F_Movement_Mayor2
	applymovement 1, RustboroCity_DevonCorp_1F_Movement_Player2
	waitmovement 0
	delay 30
	msgbox RustboroCity_DevonCorp_1F_Text_MayorOffice2, MSGBOX_DEFAULT
	closemessage
	applymovement 1, Common_Movement_FaceDown
	waitmovement 0
	msgbox RustboroCity_DevonCorp_1F_Text_MayorOffice3, MSGBOX_DEFAULT
	closemessage
	applymovement 1, RustboroCity_DevonCorp_1F_Movement_Mayor2
	applymovement OBJ_EVENT_PLAYER_ID, RustboroCity_DevonCorp_1F_Movement_Player3
	waitmovement 0
	setflag FLAG_MET_DEVON_EMPLOYEE
	release
	end

